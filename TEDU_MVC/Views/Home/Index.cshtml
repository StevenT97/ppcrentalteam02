@model PagedList.IPagedList<Models.FrameWork.PROPERTy>
@using PagedList.Mvc;
@*@model IEnumerable<Models.FrameWork.PROPERTy>*@
@using Models.FrameWork
@{
    var db = new DemoPPCRentalEntities();
    ViewBag.Title = "Index";
    var Quans = new SelectList(db.DISTRICT_Table, "ID", "DistrictName");
    var Duongs = new SelectList(db.STREETs.Take(0), "ID", "StreetName");
}
@{
    Layout = "~/Views/Layout/_LayoutPage1.cshtml";
}
@Html.DropDownList("Quan", Quans, "Chọn quận...")
@Html.DropDownList("Duong", Duongs, "Chọn đường...")


<div class="content-bg">
    <div class="wrap">
        <div class="content">
            <div class="section group">
                @*==================*@
                <div class="grid_1_of_3 images_1_of_3" style="width:100%;height:20%">
                    <h3 style="color: white;">Find Your Property</h3>

                    <form role="search" action="@Url.Action("Search","Home")" method="get">

                      

                        @*<br>

                            <input type="text" placeholder="Search" name="text">
                            <br>
                            <button type="submit" >Submit</button>*@
                    </form>
                </div>


                @*-----------------*@
                @foreach (var item in Model)
                {
                    <div class="grid_1_of_3 images_1_of_3">
                        <h3 style="color: white;">
                            @{
                                if (@item.PropertyName.Length <= 20)
                                {
                                    @item.PropertyName
                                }
                                else
                                {
                                    @item.PropertyName.Substring(0, 15)

                                }
                            }


                        </h3>
                        <a href="~/Home/Details/@item.ID"><img src="~/Images/@item.Avatar" alt="" /></a>
                        @*<p class="top">
                                @{
                                    try
                                    {
                                        if (@item.Content.Length <= 100)
                                        {
                                        @item.Content
                                        }
                                        else if (@item.Content == null)
                                        {

                                        }
                                        else
                                        {
                                        @item.Content.Substring(0, 101)
                                        }
                                    }
                                    catch(NullReferenceException)
                                    {

                                    }

                                }
                            </p>*@
                        <div class="btn"><a href="#">read more</a></div>
                    </div>

                                }

            </div>
            <div>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @class = "pagination" }))
            </div>
        </div>
      
    </div>
</div>

