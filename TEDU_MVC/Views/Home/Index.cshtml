<link href="~/GiaoDienChinh/Select2/css/select2.min.css" rel="stylesheet" />
<script src="~/GiaoDienChinh/Select2/js/select2.min.js"></script>
    <script>
    $('#Quan').select2();
    $('#Duong').select2();
    $('#Quan').on('change', function () {
       
        $('#Duong').empty();
        $.getJSON('/Home/GetStreet?did=' + $('#Quan').val(), function (json) {
            $('#Duong').select2({ data: json });
        });

    });
    </script>
}

